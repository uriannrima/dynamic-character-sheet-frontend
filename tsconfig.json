{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "Constants": [
        "src/constants.dev.ts"
      ],
      "@/*": [
        "src/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "store/*":[
        "src/store/*"
      ],
      "domain/*": [
        "src/domain/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}